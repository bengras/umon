etheraddr   		= MACADDRBASE;
alt_tfsdevtbl_base	= ALTTFSDEVTBLBASE;

MEMORY 
{
	ram (RWX):		org = RAMTSTBASE,	len = RAMTSTLEN
}

SECTIONS
{
	.text	:
	{
		boot_base = .;
		reset.o(.text)
	} >ram

	.data	:
	{
		*(.data)
	} >ram

	.sdata	:
	{
		*(.sdata)
	} >ram

	.sdata2	:
	{
		*(.sdata2)
	} >ram

	.rodata	:
	{
		*(.rodata)
	} >ram

	.got	:
	{
		*(.got)
	} >ram

	.bss	:
	{
		bss_start = .;
		*(.bss) *(COMMON)
	} >ram

	.sbss	:
	{
		*(.sbss)
		bss_end = .;
	} >ram
}
